<!-- Auto site map script -->
<script>
(async function(){
  // Change these if you rename the repo/user
  const USER = 'xatusbetazx17';
  const REPO = 'Study';

  const listEl = document.getElementById('file-list');
  try {
    const res = await fetch(`https://api.github.com/repos/${USER}/${REPO}/contents/`);
    if (!res.ok) throw new Error('GitHub API error');
    const data = await res.json();

    // Only show .html files (things that open like a website on GitHub Pages)
    const pages = (data || [])
      .filter(it => it.type === 'file' && /\.html?$/i.test(it.name))
      .sort((a,b) => a.name.localeCompare(b.name));

    if (pages.length === 0) {
      listEl.innerHTML = '<li class="small">No .html files found in the repo root.</li>';
      return;
    }

    listEl.innerHTML = pages.map(p => {
      return `<li><a href="${p.name}">${p.name}</a></li>`;
    }).join('');
  } catch (e) {
    listEl.innerHTML = '<li class="small">Could not load repo file list.</li>';
  }
})();
</script>
